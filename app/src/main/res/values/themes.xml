<resources>
    <!-- Ligth theme  -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white_universal</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white_universal</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white_day</item>
        <item name="android:colorBackground">@color/white_day</item>
        <item name="colorSurface">@color/white_day</item>
        <item name="colorOnBackground">@color/black_day</item>
        <item name="colorOnSurface">@color/black_day</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Font style -->
        <item name="textAppearanceHeadline4">@style/Text.Bold.32</item>
        <item name="textAppearanceHeadline6">@style/Text.Medium.22</item>
        <item name="textAppearanceSubtitle1">@style/Text.Medium.16</item>
        <item name="textAppearanceBody1">@style/Text.Regular.16</item>
        <item name="textAppearanceCaption">@style/Text.Regular.12</item>
    </style>
</resources>
