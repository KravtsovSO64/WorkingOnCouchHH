<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="shape_appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedShape">RoundedShape</style>

    <style name="Developers">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="salary_hint_text_appearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16dp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="salary_placeholder">
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="placeholder_text_appearance" parent="salary_placeholder">
        <item name="android:textColor">@color/gray</item>

    </style>

</resources>
